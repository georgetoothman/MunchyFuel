<body>
<center>
  <style>
    body {
     background: url("<%=@foursquare.pic_url%>")  no-repeat fixed center;
     background-size: 100% auto;
     position: center;
    }
  </style>
<%= @foursquare.name %><br>
<%= @foursquare.phone_num %><br>
<%= @foursquare.address %>
<br>
<br>
<br>
<%= button_to "Want", root_path, class: "btn btn-default btn-lg" %>
<%= button_to "Don't Want", root_path, class: "btn btn-default btn-lg" %>

<%= form_for @photo do |f| %>
    <%= f.hidden_field :url, :value => @foursquare.pic_url %>
    <%= f.submit "Bad Picture", class: "btn btn-default btn-lg" %>
<% end %>
</center>
</body>
