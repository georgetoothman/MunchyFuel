<center>
  <style>
    body {
     transition: background-image 1s ease-in-out;
     background: url("<%=@foursquare.pic_url%>")  no-repeat fixed center;
     background-size: 100% auto;
     position: center;
    }
    #restaurant {
      color: white;
    }
  </style>
  <div class="background-image">

  </div>
  <div id="restaurant">
    <a href="http://foursquare.com/v/<%=@foursquare.venue_id%>"><%= @foursquare.name %></a><br>
    <%= @foursquare.phone_num %><br>
    <%= @foursquare.address %><br>
    <a href="<%=@foursquare.delivery_url%>">Order Delivery!</a><br>
    <%= button_to "Nevermind", root_path, :class => "btn btn-default", :method => :get %>
  </div>
</center>

<div class="buttons">
<%= render 'bad_picture' %>
<%= render 'dislikes' %>
<%= render 'likes' %>
</div>
